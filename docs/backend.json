{
  "entities": {
    "ContactFormSubmission": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "ContactFormSubmission",
      "type": "object",
      "description": "Represents a contact form submission from a user.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the contact form submission."
        },
        "name": {
          "type": "string",
          "description": "Name of the person submitting the form."
        },
        "email": {
          "type": "string",
          "description": "Email address of the person submitting the form.",
          "format": "email"
        },
        "subject": {
          "type": "string",
          "description": "Subject of the inquiry."
        },
        "message": {
          "type": "string",
          "description": "The message content of the submission."
        },
        "submissionDate": {
          "type": "string",
          "description": "Date and time when the form was submitted.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "name",
        "email",
        "subject",
        "message",
        "submissionDate"
      ]
    },
    "BloodDonation": {
      "title": "BloodDonation",
      "type": "object",
      "description": "Represents a blood donation registration.",
      "properties": {
        "fullName": {
          "type": "string",
          "description": "Full name of the donor."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Email address of the donor."
        },
        "dob": {
          "type": "string",
          "format": "date",
          "description": "Date of birth of the donor."
        },
        "bloodGroup": {
          "type": "string",
          "description": "Blood group of the donor."
        },
        "whatsapp": {
          "type": "string",
          "description": "WhatsApp number of the donor (optional)."
        },
        "mobile": {
          "type": "string",
          "description": "Mobile number of the donor."
        },
        "address": {
          "type": "string",
          "description": "Full address of the donor."
        },
        "submittedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of when the form was submitted."
        }
      },
      "required": [
        "fullName",
        "email",
        "dob",
        "bloodGroup",
        "mobile",
        "address",
        "submittedAt"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "/contactFormSubmissions/{contactFormSubmissionId}": {
      "schema": {
        "$ref": "#/backend/entities/ContactFormSubmission"
      },
      "description": "Stores contact form submissions. Only authorized personnel can read/write."
    },
    "/bloodDonations/{donationId}": {
      "schema": {
        "$ref": "#/backend/entities/BloodDonation"
      },
      "description": "Stores blood donation registrations. Publicly writable, but only readable by authorized staff."
    }
  }
}

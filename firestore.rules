rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /contactFormSubmissions/{contactFormSubmissionId} {
      // Anyone can create a contact submission
      allow create: if true;
      // Only authenticated users who are admins can manage contact submissions
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }

    match /bloodDonations/{donationId} {
      // Anyone can create a blood donation registration
      allow create: if true;
      
      // Only admins can read, update, or delete registrations
      allow read, update, delete: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
